<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registorbackground"
    android:orientation="vertical"
    tools:context="com.example.stjais.carpoolkarle.RegistorActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Here"
        android:textAlignment="center"
        android:textColor="#ecf0f1"
        android:textSize="35dp"
        android:textStyle="bold"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        app:errorEnabled="true"
        android:textColorHint="#ecf0f1"
        app:errorTextAppearance="@style/WelcomeErrorAppearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="fullname"
            android:textColorHint="#ecf0f1" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_email_"
        app:errorEnabled="true"
        android:textColorHint="#ecf0f1"
        app:errorTextAppearance="@style/WelcomeErrorAppearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email"
        android:textColorHint="#ecf0f1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_age"
        android:layout_width="match_parent"
        app:errorEnabled="true"
        android:textColorHint="#ecf0f1"
        app:errorTextAppearance="@style/WelcomeErrorAppearance"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:textColorHint="#ecf0f1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_contact"
        app:errorEnabled="true"
        android:textColorHint="#ecf0f1"
        app:errorTextAppearance="@style/WelcomeErrorAppearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_cno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact no"
        android:textColorHint="#ecf0f1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_username"
        app:errorEnabled="true"
        android:textColorHint="#ecf0f1"
        app:errorTextAppearance="@style/WelcomeErrorAppearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username"
        android:textColorHint="#ecf0f1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password"
        app:errorEnabled="true"
        android:textColorHint="#ecf0f1"
        app:errorTextAppearance="@style/WelcomeErrorAppearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set password"
        android:inputType="textPassword"
        android:textColorHint="#ecf0f1" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnSignup"
        android:textColor="#ffff"
        android:background="@drawable/roundedbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup" />
</LinearLayout>
</ScrollView>